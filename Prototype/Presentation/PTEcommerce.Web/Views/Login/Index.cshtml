
@{
    ViewBag.Title = "ĐĂNG NHẬP";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    

}


    <div class="work-page login-page">

        <div class="logo col-8">
            <img src="~/Assets/publics/images/logo-login.png" width="100" alt="">
        </div>

        <div class="main">

            <div class="form">
                <form>
                    <div class="item-input">
                        <input step="10000" id="username" type="text" placeholder="Nhập tài khoản">
                    </div>
                    <div class="item-input">
                        <input step="10000" id="password" type="password" placeholder="Nhập mật khẩu">
                    </div>

                    <div class="item-button button-payment">
                        <button type="submit" id="btnLogin">Đăng nhập</button>
                    </div>
                </form>

                <div class="nav-form">
                    <p>Bạn chưa có tài khoản? <a href="/dang-ky">Đăng ký ngay</a></p>
                </div>
            </div>
        </div>

    </div>

